{{> header}}
<div class="container py-5 d-flex justify-content-between align-items-center" id="band">
    <div class="d-inline-block float-left">
        <a href="javascript: history.go(-1)" class="btn btn-dark d-flex align-items-center"><i class="bi bi-arrow-left-circle fs-5 me-2"></i>Volver</a>
    </div>
    <h1 class="text-center">Ediciones del producto "{{ediciones.0.NombreProducto}}"</h1>
    <div></div>
</div>
<div class="container d-flex flex-row mb-5">
        <div class="col-2 me-5">
            <div class="row text-center"style="max-width: 540px;">
                <img src= "../public/{{ediciones.0.ImagenProducto}}" class="img-fluid rounded" alt="...">
            </div>
        </div>
        <table class="table text-center align-middle">
        <thead class="table-dark">
                <tr>
                    <th scope="col">N°Edicion</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Precio actual</th>
                    <th scope="col">Acción</th>
                </tr>
        </thead>
        <tbody>
        {{#ediciones}}
                <tr>
                <td>{{Numero}}</td>
                <td>{{Fecha}}</td>
                <td>$ {{Precio}}</td>
                {{#Comprado}}
                    <td>
                    <button class="btn btn-secondary" disabled >Comprada</button>
                    </td>
                {{/Comprado}}
                {{^Comprado}}
                <form action="/edicion/comprar" method="post">
                    <input type="hidden" name="IdEdicion" value={{Id}}>
                     <input type="hidden" name="IdProducto" value={{IdProducto}}>
                     <input type="hidden" name="Precio" value={{Precio}}>
                    <td><button class="btn btn-success">Comprar</button></td>
                </form>
                {{/Comprado}}
                </tr>
                <tr>
            </tbody>
        {{/ediciones}}    
        </table>
</div> 
{{> footer}}