{{> header}}
<div class="container my-5">
    <div class="row justify-content-center">
        <h2 class="text-center my-5">Nueva Seccion</h2>
        <div class="col-6 align-middle bg-light p-2">
            <form class="row g-3" action="/seccion/altaSeccion" method="post" enctype="multipart/form-data">
                <div class="col-4 mb-2">
                    <label for="nombre">Nombre de la seccion: </label>
                </div>
                <div class="col-8 mb-2">
                    <input type="text" id="nombre" name="nombre" class="form-control" required>
                </div>

                <div class="d-flex justify-content-center mt-0">
                    <a href="/seccion/mostrarSecciones" class="btn btn-danger">Cancelar</a> 
                    <input type="submit" class='btn btn-success' name="enviar" value="Alta Seccion">
                </div>
            </form>
        </div>
    </div>

    {{> footer}}


