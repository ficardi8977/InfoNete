{{> header}}
<div class="container">
    <h1 class="text-center mb-4">Catalogo de productos:</h1>
    <div class="row my-5">
        {{#productos}}
            <div class="col-12 col-md-6">
                <div class="card m-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                               <img src="../public/{{Imagen}}" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{Nombre}}</h5>
                                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <form action="/suscripcion/alta" method="post">
                                    <input type="hidden" name="Id" value={{Id}}>
                                    <button class="btn btn-success" type="submit" >Suscribirse</button>
                                </form>    
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        {{/productos}}  
    </div> 
</div>
{{> footer}}