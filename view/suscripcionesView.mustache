{{> header}}
<div class="w3-container w3-content w3-center w3-padding-64" style="max-width:800px" id="band">
<h1>Mis suscripciones</h1>
</div>

<div class="container">        
        <div class="row">
                <table class="table">
                        <thead class="table-dark">
                                <tr>
                                        <th scope="col">Producto</th>
                                        <th>Nombre Producto</th>
                                        <th scope="col">Tipo Producto</th>
                                        <th scope="col">Vigencia</th>
                                        <th scope="col">Autogestion</th>
                                </tr>
                        </thead>
                {{#suscripciones}}
                <tbody>
                        <tr>
                                <td> <img src = "../public/{{Imagen}}" class="img-fluid rounded"> </td>
                                <td class="align-middle"><p>{{NombreProducto}}</p>
                                </td>
                                <td class="align-middle">{{NombreTipoProducto}}</td>
                                <td class="align-middle">{{FechaDesde}} a {{FechaHasta}}</td>
                                <td class="align-middle">
                                        <form action="/suscripcion/baja" method="post">
                                        <input type="hidden" name="IdProducto" value={{IdProducto}}>       
                                        <button class="btn btn-success" type="submit" >Desuscribirse</button>
                                        </form>          
                                </td>
                                </tr>
                        <tr>
                </tbody>
                {{/suscripciones}}    
                </table>
        </div> 
</div>
{{> footer}}