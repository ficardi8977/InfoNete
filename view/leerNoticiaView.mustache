{{> header}}
<div class="container">

    <div id="titulo">
        <h1>{{Titulo}}</h1>
    </div>

    <div id="subtitulo">
        <h3>{{Subtitulo}}</h3>
    </div>
    <div class="row">
        <div class="col-md-6 my-5 text-center" id="cuerpo">
            <p>{{Cuerpo}}</p>
        </div>

        <div class="col-md-6 my-5" id="imagen">
            <img src="/public/{{imagen}}" alt="Imagen" style="width: 500px; height: 300px">
            <div id="mapa"  style="width: 500px; height: 2px;" class="map-responsive"></div>
        </div>
    </div>
    <input type="hidden" id="coordenadasX" value="{{CoordenadaX}}">
    <input type="hidden" id="coordenadasY" value="{{CoordenadaY}}">

    {{#Link}}
        <div id="link">
            <span>Para mayor informacion ingresa al siguiente link</span>
            <a href="{{Link}}">{{Link}}</a>
        </div>
    {{/Link}}

    {{#foto}}
        <div id="foto" class="text-center">
            <img class="img-fluid" src="/public/{{foto}}" alt="Imagen" >
        </div>
    {{/foto}}

    {{#video}}
        <div id="video" class="text-center">>
            <video class="w-50" src="/public/{{video}}" controls></video>
        </div>
    {{/video}}

    {{#grabacion}}
        <div id="grabacion" class="text-center">>
            <audio id="reproducir" src="/public/{{grabacion}}" class="col-md-4" controls></audio>
        </div>
    {{/grabacion}}
</div>
<script type="text/javascript">
    document.body.addEventListener("load", loadMap());
</script>
{{> footer}}