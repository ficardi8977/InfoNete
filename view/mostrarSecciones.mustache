{{> header}}
<div class="container">
   <h1 class="text-center"> ABM de secciones</h1>
       <div class="d-flex justify-content-md-start pb-4">
        <a href="/" class="btn btn-dark d-flex align-items-center"><i class="bi bi-arrow-left-circle fs-5 me-2"></i>Volver</a>
    </div>     
    <div class="d-flex justify-content-md-end pb-3">

        <form action="/seccion/alta" method="GET">
            <input type="hidden" name="nombre" value={{nombre}}>
            <button class="btn btn-success " type="submit" >Alta Nueva Seccion</a>
        </form>

    </div>
    <div>
        <table class="table table-hover   ">
            <thead class="table-dark ">
            <tr class="text-center">
                <th scope="col">Nombre Seccion</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            {{#secciones}}
                <tbody>
                <tr class="text-center">
                    <td>{{Nombre}}</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <div class="px-2">
                                <form action="/seccion/modificar" method="POST">
                                    <input type="hidden" name="Id" value={{Id}}>
                                    <button class="btn btn-primary" type="submit" >Modificar Seccion</button>
                                </form>
                            </div>
                            <div class="px-2">
                                <form action="/seccion/baja" method="POST">
                                    <input type="hidden" name="Id" value={{Id}}>
                                    <button class="btn btn-danger" type="submit" >Baja Seccion</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                </tbody>
            {{/secciones}}
        </table>
    </div>

</div>
{{> footer}}